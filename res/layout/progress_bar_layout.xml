<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <ProgressBar 
       android:id="@+id/bar_progressbar1"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:indeterminate="true"/>
   <ProgressBar 
       android:id="@+id/bar_progressbar2"
        style="?android:attr/progressBarStyleHorizontal"
       android:layout_gravity="center_horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
       android:layout_marginTop="20dp"
       android:progress="20"
       android:secondaryProgress="50"
       android:indeterminate="false"
       android:max="100"/>
   <ProgressBar 
       android:id="@+id/bar_progressbar3"
        style="?android:attr/progressBarStyleHorizontal"
       android:layout_gravity="center_horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
       android:layout_marginTop="20dp"
       
       android:indeterminate="false"
       android:max="100"/>
   <Button
        android:id="@+id/bar_probar_start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="开始加载" />
   <SeekBar 
      android:id="@+id/seekbar_bar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
       android:layout_marginTop="20dp"
       android:thumb="@drawable/seekbar_thumb_selector"
       android:progressDrawable="@drawable/seekbar_mystyle_selector"/>
   
   <Button
        android:id="@+id/bar_seekbar_start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="开始加载" />
   
   <RatingBar 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:numStars="5"
       android:rating="1.5"/>
   
   <RatingBar 
       android:id="@+id/ratingbar_bar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:numStars="5"
       android:rating="1"
       android:progressDrawable="@drawable/ratingbar_mystyle"/>

</LinearLayout>
