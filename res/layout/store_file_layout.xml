<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/internal_write_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:onClick="storeOnClick"
        android:text="内部存入数据"
        android:textSize="10sp" />

    <Button
        android:id="@+id/internal_read_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/internal_write_btn"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/internal_write_btn"
        android:onClick="storeOnClick"
        android:text="内部存储读取"
        android:textSize="10sp" />

    <Button
        android:id="@+id/external_write_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/internal_write_btn"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:onClick="storeOnClick"
        android:text="外部公共写入"
        android:textSize="10sp" />

    <Button
        android:id="@+id/external_read_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/external_write_btn"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@id/external_write_btn"
        android:onClick="storeOnClick"
        android:text="外部公共读取"
        android:textSize="10sp" />

    <Button
        android:id="@+id/external_write_private_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/external_write_btn"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:onClick="storeOnClick"
        android:text="外部私有存储写入"
        android:textSize="10sp" />

    <Button
        android:id="@+id/external_read_private_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/external_write_private_btn"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/external_write_private_btn"
        android:onClick="storeOnClick"
        android:text="外部私有存储读取"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/store_file_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/external_write_private_btn"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="21dp" />

</RelativeLayout>