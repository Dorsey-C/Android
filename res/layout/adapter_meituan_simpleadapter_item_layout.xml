<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/meituan_simpleadapter_item_imageview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/meituan_image1" 
        android:layout_margin="5dp"/>
    
	<TextView android:id="@+id/meituan_simpleadapter_item_title"
	    android:layout_alignTop="@id/meituan_simpleadapter_item_imageview"
	    android:layout_toRightOf="@id/meituan_simpleadapter_item_imageview"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:text="1111111"
	    />
	
	<TextView android:id="@+id/meituan_simpleadapter_item_content"
	    android:layout_alignBottom="@id/meituan_simpleadapter_item_imageview"
	    android:layout_toRightOf="@id/meituan_simpleadapter_item_imageview"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        
        android:text="111111111"
	    />
	
</RelativeLayout>