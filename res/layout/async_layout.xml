<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView android:id="@+id/async_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <SeekBar 
      android:id="@+id/async_seekbar_bar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
       android:layout_marginTop="20dp"
       android:thumb="@drawable/seekbar_thumb_selector"
       android:progressDrawable="@drawable/seekbar_mystyle_selector"/>

    <Button
        android:id="@+id/handler_seekbar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handler加载进度条信息" />

    <Button
        android:id="@+id/async_seekbar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="异步任务加载进度条" />
    <Button
        android:id="@+id/async_stop_seekbar_progress_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="终止异步进程" />

</LinearLayout>
