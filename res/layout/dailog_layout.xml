<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <Button
        android:id="@+id/progressdialog_progress_dialog_btn" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进度对话按钮"/>
    
    <Button
        android:id="@+id/progressdialog_timepicker_dialog_btn" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间对话框按钮"/>
    
    <Button
        android:id="@+id/progressdialog_alert_dialog_btn" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多功能对话框按钮"/>
    
    <Button
        android:id="@+id/progressdialog_single_alert_dialog_btn" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单选对话框按钮"/>
    
    <Button
        android:id="@+id/progressdialog_smyself_alert_dialog_btn" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义对话框按钮"/>

</LinearLayout>
